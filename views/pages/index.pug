extends ../layouts/layouts

block content
  //- Definición de una tarjeta de noticia
mixin newsItem(category, title, img, summary)
  article.news-card
    .img-wrapper
      img(src=img, alt=title)
    .content
      span.badge= category
      h3= title
      p= summary
      a.read-more(href="/") Continuar leyendo

block content
  main.container
    //- Sección Hero (Noticia más importante)
    section.hero-section
      .hero-grid
        .hero-main
          img(src="/img/thune.jpg", alt="Principal")
          .hero-overlay
            span.badge Urgente
            h2 Thune descarta la posibilidad de una toma militar de Groenlandia
            p El líder de la mayoría del Senado, John Thune (R-S.D.), desestimó el martes la posibilidad de desplegar militares para apoderarse de Groenlandia.
        
        aside.hero-side
          h2 Lo más leído
          ul.trending-list
            li: a(href="#") 1. Resultados de las elecciones locales
            li: a(href="#") 2. Nueva actualización del sistema operativo
            li: a(href="#") 3. El clima para este fin de semana

    //- Sección de cuadrícula de noticias
    section.latest-news
      h2.section-title Últimas Noticias
      .news-grid
        +newsItem("Tecnología", "Nuevos chips de 2nm", "/img/titulares/2nm.jpeg", "La industria de semiconductores da un salto masivo en eficiencia.")
        +newsItem("Deportes", "Final de temporada emocionante", "/img/titulares/lvbp.png", "Todo lo que dejó la última jornada del torneo local.")
        +newsItem("Cultura", "El arte digital en los museos", "/img/titulares/museo.jpg", "Cómo las pantallas están reemplazando a los lienzos tradicionales.")
        +newsItem("Tecnología", "Nuevos chips de 2nm", "https://picsum.photos/id/2/400/250", "La industria de semiconductores da un salto masivo en eficiencia.")
        +newsItem("Deportes", "Final de temporada emocionante", "https://picsum.photos/id/3/400/250", "Todo lo que dejó la última jornada del torneo local.")
        +newsItem("Cultura", "El arte digital en los museos", "https://picsum.photos/id/4/400/250", "Cómo las pantallas están reemplazando a los lienzos tradicionales.")